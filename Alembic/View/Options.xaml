<Window x:Class="ACViewer.View.Options"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ACViewer.View"
        mc:Ignorable="d"
        ShowInTaskbar="False"
        Title="Options" Height="450" Width="600" Icon="../Icons/Settings_16x.png" Style="{DynamicResource CustomWindowStyle}">
    <Grid Margin="0,0,0,0">
        <Label Content="AC Folder:" HorizontalAlignment="Left" Margin="17,11,0,0" VerticalAlignment="Top"/>
        <TextBox Text="{Binding ACFolder}" HorizontalAlignment="Left" Height="23" Margin="86,15,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="370"/>
        <Button Content="Select Folder" HorizontalAlignment="Left" Margin="461,15,0,0" VerticalAlignment="Top" Width="94" Height="23" Click="SelectACFolderButton_Click"/>
        <CheckBox Content="Automatically Load DATs on Startup" IsChecked="{Binding AutomaticallyLoadDATsOnStartup}" HorizontalAlignment="Left" Margin="32,47,0,0" VerticalAlignment="Top"/>

        <Label Content="Mouselook:" HorizontalAlignment="Left" Margin="17,80,0,0" VerticalAlignment="Top"/>
        <Label Content="Speed:" HorizontalAlignment="Left" Margin="17,109,0,0" VerticalAlignment="Top"/>
        <Slider Name="SliderMouseSpeed" HorizontalAlignment="Left" Margin="73,113,0,0" VerticalAlignment="Top" Width="120" Minimum="1" Maximum="20" ValueChanged="SliderMouseSpeed_ValueChanged"/>
        <TextBox Name="TextBoxMouseSpeed" HorizontalAlignment="Left" Margin="198,113,0,0" Text="{Binding MouseSpeed}" TextWrapping="Wrap" VerticalAlignment="Top" Width="50" TextChanged="TextBoxMouseSpeed_ValueChanged"/>
        <CheckBox Content="Alt method" IsChecked="{Binding AltMouselook}" HorizontalAlignment="Left" Margin="17,148,0,0" VerticalAlignment="Top" ToolTip="Only enable this if you have bugs with primary mouselook method"/>

        <Label Content="Theme:" HorizontalAlignment="Left" Margin="17,185,0,0" VerticalAlignment="Top" />
        <ComboBox HorizontalAlignment="Left" Margin="73,188,0,0" VerticalAlignment="Top" Width="120" ItemsSource="{Binding Themes}" SelectedItem="{Binding Theme}" />

        <Label Content="Background Colors" HorizontalAlignment="Left" Margin="17,225,0,0" VerticalAlignment="Top" />
        <Label Content="Font Color" HorizontalAlignment="Left" Margin="17,255,0,0" VerticalAlignment="Top">
            <Label.InputBindings>
                <MouseBinding Gesture="LeftClick" Command="{Binding Swatch_Click}" CommandParameter="FontColor"/>
            </Label.InputBindings>
        </Label>
        <Label Content="World Viewer" HorizontalAlignment="Left" Margin="17,285,0,0" VerticalAlignment="Top">
            <Label.InputBindings>
                <MouseBinding Gesture="LeftClick" Command="{Binding Swatch_Click}" CommandParameter="WorldViewer"/>
            </Label.InputBindings>
        </Label>
        <Label Content="Progress Bar" HorizontalAlignment="Left" Margin="17,314,0,0" VerticalAlignment="Top">
            <Label.InputBindings>
                <MouseBinding Gesture="LeftClick" Command="{Binding Swatch_Click}" CommandParameter="ProgressBar"/>
            </Label.InputBindings>
        </Label>
        <Border BorderBrush="{Binding BorderColor}" BorderThickness="1" Width="18" Height="18"  Margin="115,260,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Padding="1,1,1,1">
            <Border.InputBindings>
                <MouseBinding Gesture="LeftClick" Command="{Binding Swatch_Click}" CommandParameter="FontColor"/>
            </Border.InputBindings>
            <Rectangle Width="16" Height="16" Fill="{Binding FontColor}" />
        </Border>
        <Border BorderBrush="{Binding BorderColor}" BorderThickness="1" Width="18" Height="18" Margin="115,290,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Padding="1,1,1,1">
            <Border.InputBindings>
                <MouseBinding Gesture="LeftClick" Command="{Binding Swatch_Click}" CommandParameter="WorldViewer"/>
            </Border.InputBindings>
            <Rectangle Fill="{Binding WorldViewer_BackgroundColor}" />
        </Border>
        <Border BorderBrush="{Binding BorderColor}" BorderThickness="1" Width="18" Height="18" Margin="115,319,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Padding="1,1,1,1">
            <Border.InputBindings>
                <MouseBinding Gesture="LeftClick" Command="{Binding Swatch_Click}" CommandParameter="ProgressBar"/>
            </Border.InputBindings>
            <Rectangle Fill="{Binding ProgressBar_Color}" />
        </Border>

        <Button Content="OK" HorizontalAlignment="Left" Margin="325,372,0,0" Width="75" Click="OKButton_Click" Height="20" VerticalAlignment="Top"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="410,372,0,0" Width="75" Click="CancelButton_Click" Height="20" VerticalAlignment="Top" IsCancel="true"/>
    </Grid>
</Window>
